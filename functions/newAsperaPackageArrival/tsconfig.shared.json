{
    "compilerOptions": {
        "target": "ES2017",
        "allowJs": false,
        "checkJs": false,
        "allowSyntheticDefaultImports": false,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": false,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "jsx": "react",
        "outDir": "./build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true
    },
    "include": [
        "../_shared/convertToURIComponent.ts",
        "../_shared/devDriver.ts",
        "../_shared/getAsperaApiBearerToken.ts",
        "../_shared/getAsperaApiPackage.ts",
        "../_shared/getAsperaApiPackageAndToken.ts",
        "../_shared/getAsperaApiPackageFiles.ts",
        "../_shared/getAsperaApiPackageFilesAndToken.ts",
        "../_shared/getAsperaApiTransfer.ts",
        "../_shared/lambdaFunctionName.ts",
        "../_shared/lambdaFunctionResponse.ts",
        "../_shared/putItemsInDynamoDB.ts",
        "../_shared/putNewAsperaFilesInDynamoDB.ts",
        "../_shared/validateEventBody.ts"
    ]
}
